<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconoImageView"
            android:layout_width="99dp"
            android:layout_height="46dp"
            android:layout_marginEnd="47dp"
            android:layout_toStartOf="@+id/arrivalTextView"
            android:src="@drawable/icon_flithg" />

        <TextView
            android:id="@+id/departureTextView"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="MDE"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/arrivalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="BOG"
            android:textColor="@android:color/black"
            android:textSize="35sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/departureTextView"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
